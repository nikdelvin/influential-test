---
import Forms from "../../components/signUp/Forms.astro";
import Step from "../../components/signUp/Step.astro";
import Stepper from "../../components/signUp/Stepper.astro";
import Steps from "../../components/signUp/Steps.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Form from "../../components/signUp/Form.astro";
import RadioWithDescription from '../../components/signUp/formFields/RadioWithDescription.astro';
import GoogleAppleAuth from '../../components/signUp/formFields/GoogleAppleAuth.astro';
import Separator from '../../components/signUp/formFields/Separator.astro';
import Input from '../../components/signUp/formFields/Input.astro';
import TOC from "../../components/signUp/formFields/TOC.astro";
---

<MainLayout>
    <Stepper>
        <Steps>
            <Step number="1" title="Account Type" description="Select your Account Type" current={true}/>
            <Step number="2" title="Personal Info" description="Setup your Personal Info"/>
            <Step number="3" title="Completed" description="Your account is created" last={true}/>
        </Steps>
        <Forms>
            <Form title="Choose an account type" state="current">
                <div class='row'>
                    <div class='col-lg-6'>
                        <RadioWithDescription id="kt_create_account_form_account_type_creator" name="account_type" value="creator" checked={true} title="Creator" description="Sign-up as a creator">
                            <i class="ki-duotone ki-badge fs-3x me-5"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span></i>
                        </RadioWithDescription>
                    </div>
                    <div class='col-lg-6'>
                        <RadioWithDescription id="kt_create_account_form_account_type_agency" name="account_type" value="agency" checked={false} title="Agency" description="Sign-up as an agency">
                            <i class="ki-duotone ki-briefcase fs-3x me-5"><span class="path1"></span><span class="path2"></span></i>
                        </RadioWithDescription>
                    </div>
                </div>
                <div slot="description">
                    If you need more info, please check out 
                    <a href="#" class="link-primary fw-bold">Help Page</a>.
                </div>
            </Form>
            <Form title="Account details" description="Add your personal info" state="pending">
                <GoogleAppleAuth/>
                <Separator title="Or with email"/>
                <div class='row'>
                    <div class='col-lg-6'>
                        <Input type='text' name='first_name' placeholder="First Name"/>
                    </div>
                    <div class='col-lg-6'>
                        <Input type='text' name='last_name' placeholder="Last Name"/>
                    </div>
                </div>
                <Input type='text' name='account_name' placeholder="Creator/Agency Name"/>
                <Input type='text' name='email' placeholder="Email"/>
                <Input type='text' name='phone' placeholder="Phone Number"/>
                <Input type='password'/>
                <Input type='repeatPassword'/>
                <TOC/>
            </Form>
            <Form title="Your Are Done!" state="pending">
                <div slot="description">
                    If you need more info, please check out 
                    <a href="#" class="link-primary fw-bold">Help Page</a>.
                </div>
                <button id="to_dashboard" type="button" class="btn btn-lg btn-primary mt-6">
                    Go to dashboard
                    <i class="ki-duotone ki-arrow-right fs-4 ms-1"><span class="path1"></span><span class="path2"></span></i>
                </button>
            </Form>
        </Forms>
    </Stepper>
</MainLayout>
<script>
    document.querySelector('#to_dashboard')?.addEventListener('click', () => {
        localStorage.setItem('jwt', 'nikdelvin')
        window.open('/', '_self')
    })
</script>
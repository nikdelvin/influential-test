---
export interface Props {
    data: Array<{entry: string, type: 'text' | 'link-blue' | 'link-dark' | 'badge-green' | 'badge-red'}>
}

const { data } = Astro.props
---

<tr class="even">
    <td>
        <div class="form-check form-check-sm form-check-custom form-check-solid">
            <input class="form-check-input" type="checkbox" value="1">
        </div>
    </td>
    {data.map(col => {
        switch (col.type) {
            case 'text':
                return <td>{col.entry}</td>
            case 'link-dark':
                return <td>
                    <a href="#" class="text-gray-800 text-hover-primary mb-1">{col.entry}</a>
                </td>
            case 'link-blue':
                return <td>
                    <a href="#" class="text-primary mb-1">{col.entry}</a>
                </td>
            case 'badge-green':
                return <td>
                    <div class="badge badge-light-success d-inline">{col.entry}</div>
                </td>
            case 'badge-red':
                return <td>
                    <div class="badge badge-light-danger d-inline">{col.entry}</div>
                </td>
        }
    })}
    <td class="text-end">
        <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
            Actions
            <i class="ki-duotone ki-down fs-5 ms-1"></i>         
        </a>
        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
            <div class="menu-item px-3">
                <a href="#" class="menu-link px-3">
                    View
                </a>
            </div>
            <div class="menu-item px-3">
                <a href="#" class="menu-link px-3" data-kt-customer-table-filter="delete_row">
                    Delete
                </a>
            </div>
        </div>
    </td>
</tr>